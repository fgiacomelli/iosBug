<?xml version="1.0" encoding="UTF-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TriggerProblemiOSRelease"
    x:Class="TriggerProblemiOSRelease.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="ButtonEnabledBackgroundColor">#FFB700</Color>
            <Color x:Key="ButtonDisabledBackgroundColor">#E7E7E7</Color>
            <Color x:Key="BorderGroupButtonsColor">#F6F6F6</Color>

            <Style x:Key="TextRegular16" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="Black" />
            </Style>

        </ResourceDictionary>


    </Application.Resources>
</Application>
